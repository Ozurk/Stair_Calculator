<StairCalc>
    MainScreen:


<MainScreen>
    name: "MainScreen"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Stair Calculator"
            font_size: 25
            size_hint_y: .5
        BoxLayout:   
            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "Flight Height"
                TextInput:
                    name: "FlightHeight"
                    text: "Enter the height of the flight here"
                    on_focus: if self.text == "Enter the height of the flight here": self.text = ""
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: "Flight Depth"
                TextInput:
                    name: "FlightDepth"
                    text: "Enter the Depth[run] of the flight here"
                    on_focus: if self.text == "Enter the Depth[run] of the flight here": self.text = ""
        BoxLayout:
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: "Min Stair Height"
                TextInput:
                    name: "MinStairHeight"
                    text: "Enter the min height of each stair here"
                    on_focus: if self.text == "Enter the min height of each stair here": self.text = ""
                Label:
                    text: "Max Stair Height"
                TextInput:
                    name: 'Max_Stair_Height'
                    text: 'Enter the max height of each stair here'
                    on_focus: if self.text == 'Enter the max height of each stair here': self.text = ""
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: "Min Stair Stair Depth"
                TextInput:
                    name: "MinStairDepth"
                    text: "Enter the min Depth of each stair here"
                    on_focus: if self.text == "Enter the min Depth of each stair here": self.text = ""
                Label:
                    text: "Max Stair Depth"
                TextInput:
                    name: 'Max_Stair_Depth'
                    text: 'Enter the max Depth of each stair here'
                    on_focus: if self.text == 'Enter the max Depth of each stair here': self.text = "" 
        Button:
            text: "Calculate"  
            size_hint_y: .5
        BoxLayout:
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: "Number of Stairs"
                Label:
                    text: "3656"
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Tread_Depth'
                Label:
                    text: "3456"
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Stair Height'
                Label:
                    text: '1346'
            BoxLayout:
                orientation: 'vertical'
                Button:
                    text: "Next"
