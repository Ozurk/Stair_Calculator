<StairCalc>
    StartScreen:
    StairSize:
    Flight_Calculator:


<StairSize>
    name: "StairSize"
    BoxLayout:
        orientation: "vertical"
        Label:
            id: MainLabel
            text: "Stair Calculator"
            font_size: 20
            size_hint_y: .25
        BoxLayout:  
            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "Flight Height in Inches"
                TextInput:
                    id: StaircaseHeight
                    text: 'Enter StairCase Height'
                    on_focus: if self.text == "Enter the height of the flight here": self.text = ""
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: "Flight Depth in Inches"
                TextInput:
                    id: StaircaseDepth
                    text: 'Enter StairCase Depth'
                    on_focus: if self.text == "Enter the Depth[run] of the flight here": self.text = ""
        BoxLayout:
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: "Min Stair Height"
                TextInput:
                    id: MinStairHeight
                    text: 'Enter Min Stair Height'
                    on_focus: if self.text == "Enter the min height of each stair here": self.text = ""
                Label:
                    text: "Max Stair Height"
                    
                TextInput:
                    id: MaxStairHeight
                    text: 'Max Stair Height'
                    on_focus: if self.text == 'Enter the max height of each stair here': self.text = ""
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: "Minimum Stair Depth"
                TextInput:
                    id: MinStairDepth
                    text: '11'
                    on_focus: if self.text == "Enter the min Depth of each stair here": self.text = ""
                Label:
                    text: "Max Stair Depth"
                TextInput:
                    id: MaxStairDepth
                    text: 'Max Stair Depth'
                    on_focus: if self.text == 'Enter the max Depth of each stair here': self.text = "" 
        Button:
            text: "Calculate" 
            on_press: root.submit()
            size_hint_y: .5
        BoxLayout:
            BoxLayout:
                orientation: 'vertical'
                id: "Number_of_Stairs"
                Label:
                    text: "Number of Stairs"
                Label:
                    id: NumberofStairs
                    text: "Number of Stairs"
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Tread_Depth'
                Label:
                    id: Tread_Depth
                    text: 
            BoxLayout:
                orientation: 'vertical'
                id: "Stair_Height"
                Label:
                    text: 'Stair Height'
                Label:
                    id: Stair_Height
                    text: 
            BoxLayout:
                orientation: 'vertical'
                Button:
                    text: "Next"
                    on_press: root.next()
        Button:
            text: "Go Back"
            background_color: (1,.5,0,1)
            on_press: app.root.current = "StartScreen"
            size_hint_y: .8

<StartScreen>
    name: "StartScreen"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Stair Calculator" 
            font_size: "35"
            font_name: "Roboto"
        BoxLayout:
            padding: 20
            orientation: "horizontal"
            Button:
                text: "Solve For Flight Run"
                on_press: app.root.current = "Flight_Calculator"
            Button:
                text: "Solve for Stair Size"
                on_press: app.root.current = "StairSize"

<Flight_Calculator>
    name: "Flight_Calculator"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Flight Height"
        TextInput:
            id: Flight_Height
            text: "Input the Height of the Flight Here."
            on_focus: if self.text == "Input the Height of the Flight Here.": self.text = "" 

        Label:
            text: "Stair Height"

        TextInput:
            id: Stair_Height
            text: "Input the Height of the Stair Here"
            on_focus: if self.text == "Input the Height of the Stair Here": self.text = "" 

        Label:
            text: "Stair Depth"

        TextInput:
            id: Stair_Depth
            text: "Enter the Stair Depth Here"
            on_focus: if self.text == "Enter the Stair Depth Here": self.text = ""
        BoxLayout:
            Button:
                text: "Calculate"
                on_press: root.calculate()
            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "Calculated StairCase Run (Inches)"
                Label:
                    id: CalcDepth
                    text: ""
                    font_size: 30 
        Button:
            text: "Go Back"
            background_color: (1,.5,0,1)
            on_press: app.root.current = "StartScreen"


        
            
